    <script type="text/javascript">

    function blindYes() {
        var myselect = document.getElementById("blindYesNo");
        if (myselect.options[myselect.selectedIndex].value == "n") {
            document.getElementById("blind_details").disabled = true;
        }
        else {
            document.getElementById("blind_details").disabled = false;
        }
    }

    function adjust() {

        window.lan = "@ViewBag.len";
        doChange();

    }

    function doChange()
    {
        document.getElementById("please").innerHTML = retstr(31);
        document.getElementById("legend").innerHTML = retstr(32);
        document.getElementById("impairiments").innerHTML = retstr(33);
        document.getElementById("imYes").innerHTML = retstr(48);
        document.getElementById("imNo").innerHTML = retstr(49);
        document.getElementById("ifYes").innerHTML = retstr(34);
        document.getElementById("mailList").innerHTML = retstr(35);
        document.getElementById("mlYes").innerHTML = retstr(48);
        document.getElementById("mlNo").innerHTML = retstr(49);

        document.getElementById("questions").innerHTML = retstr(36);
        document.getElementById("sugations").innerHTML = retstr(37);
        document.getElementById("free").innerHTML = retstr(38);
        document.getElementById("submit").value = retstr(50);
    }

    function thanks()
    {
        alert("Thank you for your feedback");
    }

    window.onload = adjust;
    </script>

</head>
@{
    if (ViewBag.len == "h")
    {
        @:<body onunload="" id="body1" dir="rtl">
        @:<form action="/Home/index" id="submitHome2" method="post"> <input type="submit" value=" חזור לדף הבית "> </form> 
    }
    else
    {
        @:<body onunload="" id="body1" dir="ltr">
        @:<form action="/Home/index" id="submitHome2" method="post"> <input type="submit" value=" return to home "> </form> 

    }
}

<h3 id="please"></h3>

@using (Html.BeginForm("feedbackBack", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset style="font-size:large">
        <legend id="legend">please fill all fields</legend>
        <div class="editor-label" style="font-size:large">
            @Html.LabelFor(model => model.email)
        </div>
        <div>
            @Html.EditorFor(model => model.email)
        </div>
        <div class="editor-label" id="impairiments">
            
        </div>

        <div class="editor-field">
            <select id="blindYesNo" name="blindYesNo" onchange="blindYes()">
                <option value=" ">  </option>
                <option value="y" id="imYes"></option>
                <option value="n" id="imNo"></option>
            </select>
        </div>

        <div class="editor-label" id="ifYes">
            
        </div>

        <div>
            @Html.EditorFor(model => model.blind_details)
        </div>

        <div class="editor-label" id="mailList">
            
        </div>

        <div class="editor-field">
            <select id="MainlingList" name="MainlingList">
                <option value=" "> </option>
                <option value="y" id="mlYes"></option>
                <option value="n" id="mlNo"></option>
            </select>
        </div>

    </fieldset>

    <h5>  </h5>

    <fieldset>
        <div class="editor-label">
            <h3 id ="questions"> </h3>
        </div>
        <div>
            @Html.EditorFor(model => model.question)
        </div>

        <div class="editor-label">
            <h3 id="sugations"> </h3>
        </div>
        <div>
            @Html.EditorFor(model => model.suggetion)
        </div>

        <div>
            <h3 id="free"></h3>
        </div>
        <div>
            @Html.TextAreaFor(model => model.free_text, new { cols = "55", rows = "10" })
        </div>

        <p>
            <input type="submit" value="submit" id="submit" onclick="return alert('Thank you for your feedback');" />
        </p>
    </fieldset>
}

</body>
</html>