@model eyemusic45.Models.ViewModels.eyeMusicModel
@{
    Layout = "";
}

<script> var logged = 1; var id = 312; var nickname = 'ev';</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>eye music application</title>

    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/languages.js"></script>
    <link rel="stylesheet" type="text/css" href="~/App_Themes/bootstrap.min.css">
    @Scripts.Render("~/bundles/modernizr")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-57936827-1', 'auto');
        ga('send', 'pageview');

    </script>

    <script type="text/javascript">

        function adjust() {
            var name = "lan=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1);
                if (c.indexOf(name) == 0)
                    window.lan = c.substring(name.length, c.length);
            }

            if (window.lan == 'h') {
                prechangeHeb()
            }
            else if (window.lan == 'e') {
                prechangeEng()
            }
            else if (window.lan == 'f') {
                prechangeFrn()
            }
            else if (window.lan == 'g') {
                prechangeGrm()
            }
            else if (window.lan == 'c') {
                prechangeCst()
            }

            if (screen.width < 1200) {
                document.getElementById("chckifright").style.cssFloat = "left";
            }

        }

        window.speedjs = "@Model.speed";
        window.voilumejs = "@Model.volume";
        window.beep_noise = "@Model.beep_noise";

        window.onload = adjust;
    </script>

    <script type="text/javascript">
        window.lan = "@Model.len"

        function prechangeHeb() {
            $('#body1').attr('dir','rtl');
            window.lan = 'h';
            $("#more").attr('href', 'http://brain.huji.ac.il/hebrew.asp');
            Docchange();
        }

        function prechangeEng() {
            $('#body1').attr('dir', 'ltr');
            window.lan = 'e';
            $("#more").attr('href', 'http://brain.huji.ac.il');
            Docchange();
        }

        function prechangeFrn() {
            $('#body1').attr('dir', 'ltr');
            window.lan = 'f';
            $("#more").attr('href', 'http://brain.huji.ac.il');;
            Docchange();
        }

        function prechangeGrm() {
            $('#body1').attr('dir', 'ltr');
            window.lan = 'g';
            $("#more").attr('href', 'http://brain.huji.ac.il');
            Docchange();
        }

        function prechangeCst() {
            $('#body1').attr('dir', 'ltr');
            window.lan = 'c';
            document.getElementById("more").href = "http://brain.huji.ac.il";
            Docchange();
        }


        function Docchange() {
            document.getElementById("welcome").innerHTML = retstr(1);
            document.getElementById("movies").innerHTML = retstr(3) + retstr(4) + retstr(5);
            document.getElementById("learn").innerHTML = retstr(7);
            document.getElementById("more").innerHTML = retstr(8);
            document.getElementById("upload").innerHTML = retstr(9);
            document.getElementById("contect").innerHTML = retstr(10);
            document.getElementById("app").innerHTML = retstr(11);
            document.getElementById("with").innerHTML = retstr(2);
            document.getElementById("links").innerHTML = retstr(6);
            document.getElementById("appAndroied").innerHTML = retstr(52);
            document.getElementById("step").innerHTML = retstr(117);
            document.getElementById("games").innerHTML = retstr(53);

            $.ajax({
                url: '@Url.Action("changeLen")',
                contentType: 'application/json; charset=utf-8',
                type: 'post',
                data: JSON.stringify({
                    len: window.lan,
                })
            });

            document.cookie = "lan=" + window.lan;
        }

    </script>
</head>

<body onunload="" id="body">

    <div class="container">
        <button class="btn btn-lg btn-info" id="heb" onclick="prechangeHeb()"> עברית </button>
        <button class="btn btn-lg btn-info" id="en" onclick="prechangeEng()"> English </button>
        <button class="btn btn-lg btn-info" id="en" onclick="prechangeFrn()"> français </button>
        <button class="btn btn-lg btn-info" id="en" onclick="prechangeGrm()"> Deutsch </button>
        <button class="btn btn-lg btn-info" id="en" onclick="prechangeCst()"> Čeština </button>
    </div>

    <div id="body1">
        <div class="container" style="padding-top:20px">
            <p class="site-title"></p>

            <div class="jumbotron">
                <p id="welcome"></p>
                <p id="with"></p>
                <p style="width:588px" id="movies"></p>
            </div>
            <iframe style="padding-bottom:20px" width="530" height="396"
                    src="//www.youtube.com/embed/jVBp2nDmg7E"></iframe>
            <div style="float:right" id="chckifright">
                <iframe style="padding-bottom:20px" width="530" height="396"
                        src="//www.youtube.com/embed/HqmJ60PxtFw"></iframe>

            </div>
            <div class="jumbotron" style="clear:both;padding-top:5px;margin-top:0em">
                <p style="padding-top: 5px; margin-top: 0em" id="links"></p>
                <p>
                    <a class="btn btn-lg btn-primary" href="~/Home/selectclassTrain" id="learn" role="button"> </a>
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="~/StepByStepHeb/see" id="step"> </a>
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="~/Static/Mobile.html" id="games"> </a>
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="http://brain.huji.ac.il/" id="more"> </a>
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="~/SVG/dragdrop" id="upload"> </a>
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="~/Home/feedback" id="contect"> </a>
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="https://itunes.apple.com/us/app/eyemusic-hearing-colored-shapes/id805461054?mt=8" id="app"> </a>
                </p>

                <p>
                    <a class="btn btn-lg btn-primary" href="https://play.google.com/store/apps/details?id=com.quickode.eyemusic" id="appAndroied"> </a>
                </p>
            </div>
        </div>
    </div>
</body>

</html>