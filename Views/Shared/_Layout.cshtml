            }
            function cngsN() {
                document.getElementById("myBeep").setAttribute("src", "~/../../Sounds/blank.wav");
                $("#thePlayaudio")[0].play();
                ajaxBeep("blank.wav");
            }

            function ajaxBeep(wav) {
                $.ajax({
                    url: '@Url.Action("changeBeep")',
                    contentType: 'application/json; charset=utf-8',
                    type: 'post',
                    data: JSON.stringify({ 
                        beepWav: wav
                    })
                })
            }

            function set1()
            {
                document.getElementById('mytable 0').focus();
