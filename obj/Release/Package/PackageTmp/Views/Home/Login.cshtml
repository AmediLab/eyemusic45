@model eyemusic45.DAL.userID

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>login to eye music</title>

</head>
    <body>
        <h2 id="login2">Login</h2>
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/languages.js"></script>
    <script type="text/javascript">

    function DoChange() {

        window.lan = "@ViewBag.len";
        $("label[for='name']").text(retstr(60));
        $("label[for='password']").text(retstr(61));

        document.getElementById("create").innerHTML = retstr(59);
        document.getElementById("login").innerHTML = retstr(83);
        document.getElementById("login2").innerHTML = retstr(131);
        document.getElementById("loginsub").value = retstr(131);
    }
    window.onload = DoChange;

  </script>


    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl, len = ViewBag.len}, FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend id="login">Enter username and password</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.password)
                @Html.ValidationMessageFor(model => model.password)
            </div>
            <p>
                <input id="loginsub" type="submit" value="Login" />
            </p>
        </fieldset>

        <fieldset>
            <a id="create" href="~/Home/create_user?ReturnUrl=@ViewBag.ReturnUrl&len=@ViewBag.len"> create new user</a>
        </fieldset>
    }
    </body>
</html>